---
type Props = {
  title: string;
  imgUrl: string;
};

const { imgUrl, title } = Astro.props;
---

<div class="blog-card alt">
  <div class="meta">
    <div class="photo" style={`background-image: url(${imgUrl})`}></div>
  </div>
  <div class="description">
    <h1>{title}</h1>
    <p><slot /></p>
    <p class="read-more">
      <button class="card-button">Read More</button>
    </p>
  </div>
</div>

<style lang="scss">
  $color_white: #fff;
  $color_prime: #4f6bed;
  $color_grey: #e2e2e2;
  $color_grey_dark: #a2a2a2;

  .blog-card {
    flex-basis: calc(50% - 10px);
    display: flex;
    flex-direction: column;
    margin: 1rem auto 1.6%;
    box-shadow: 0 3px 7px -1px rgba(#000, 0.1);
    background: $color_white;
    line-height: 1.4;
    font-family: sans-serif;
    border-radius: 5px;
    overflow: hidden;
    z-index: 0;

    .meta {
      position: relative;
      z-index: 0;
      height: 300px;
      width: 100%;
    }

    .photo {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      background-size: cover;
      background-position: top;
      transition: transform 0.2s;
    }

    .description {
      padding: 1rem;
      background: $color_white;
      position: relative;
      z-index: 1;

      h1 {
        line-height: 1;
        margin: 0;
        font-size: 1.7rem;
      }

      .read-more {
        text-align: right;
      }
    }

    p {
      position: relative;
      margin: 1rem 0 0;

      &:first-of-type {
        margin-top: 1.25rem;

        &:before {
          content: "";
          position: absolute;
          height: 5px;
          background: $color_prime;
          width: 35px;
          top: -0.75rem;
          border-radius: 3px;
        }
      }
    }

    @media (min-width: 640px) {
      flex-direction: column;

      .description {
        flex-basis: 50%;

        &:before {
          transform: skewX(-3deg);
          content: "";
          background: #fff;
          width: 30px;
          position: absolute;
          left: -10px;
          top: 0;
          bottom: 0;
          z-index: -1;
        }
      }

      &.alt {
        flex-direction: column;

        .description:before {
          left: inherit;
          right: -10px;
          transform: skew(3deg);
        }
      }
    }
  }

  .card-button {
    padding: 0.6rem 1.2rem;
    background-color: $color_prime;
    color: #fff;
    border: none;
    border-radius: 6px;
    font-size: 0.95rem;
    cursor: pointer;
    transition: background-color 0.2s ease;

    &:hover {
      background-color: darken($color_prime, 7%);
    }
  }
</style>
