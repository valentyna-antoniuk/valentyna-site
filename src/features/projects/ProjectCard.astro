---
import Button from "../../components/ReactButton/ReactButton";

type Props = {
  name: string;
  title: string;
  imgUrl: string;
};

const { imgUrl, title, name } = Astro.props;
---

<div class="blog-card alt">
  <div class="meta">
    <div class="photo" style={`background-image: url(${imgUrl})`}></div>
  </div>
  <div class="description">
    <h1><span>{title}</span></h1>
    <p><slot /></p>
    <p class="read-more">
      <a href={`/pet-project/${name}`}>
        <Button firstColor="#7eb3ff" secondColor="#758cff">Read More</Button>
      </a>
    </p>
  </div>
</div>

<style lang="scss">
  $color_white: #fff;
  $color_prime: #4f6bed;
  $color_grey: #e2e2e2;
  $color_grey_dark: #a2a2a2;

  .blog-card {
    flex-basis: calc(50% - 10px);
    display: flex;
    flex-direction: column;
    margin: 1rem auto 1.6%;
    box-shadow: 0 3px 7px -1px rgba(#000, 0.1);
    background: $color_white;
    line-height: 1.4;
    border-radius: 5px;
    overflow: hidden;
    z-index: 0;

    .meta {
      position: relative;
      z-index: 0;
      min-height: 300px;
      width: 100%;
    }

    .photo {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      background-size: cover;
      background-position: top left;
      filter: brightness(0.8) blur(4px);
      transition: all 0.3s ease-in-out;
    }

    .description {
      padding: 1rem;
      background: $color_white;
      position: relative;
      z-index: 1;

      h1 {
        line-height: 1;
        margin: 0 0 35px;
        font-size: 1.7rem;
        span {
          display: inline-block;
          position: relative;
          &:before {
            content: "";
            position: absolute;
            height: 4px;
            background: linear-gradient(to right, #7eb3ff, #758cff);
            width: 80px;
            bottom: -0.75rem;
            border-radius: 2px;
            transition: 0.3s all ease;
          }
        }
      }

      .read-more {
        text-align: right;
      }
    }

    p {
      position: relative;
      margin: 1rem 0 0;

      &:first-of-type {
        margin-top: 1.25rem;
      }
    }

    &:hover {
      .photo {
        filter: brightness(1) blur(0);
      }
      .description h1 span:before {
        width: 100%;
      }
    }

    @media (max-width: 1100px) {
      flex-basis: 100%;
      .photo {
        filter: brightness(0.8);
      }
    }
  }
</style>
