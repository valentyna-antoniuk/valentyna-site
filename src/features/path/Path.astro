---
import { careerJourney } from "./steps";
---

<div class="wave-pattern"></div>
<section>
  <h2>Overview of Career Journey</h2>
  <ul>
    {careerJourney.map((str) => <li>{str}</li>)}
  </ul>

  <div class="wave-pattern bottom"></div>
</section>

<style>
  section {
    background: #b6e1ff;
    position: relative;
    padding: 50px 0 80px;
  }

  .wave-pattern {
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 20" preserveAspectRatio="none"><path d="M0 10 Q 25 0, 50 10 T 100 10 V20 H0 Z" fill="%23b6e1ff"/></svg>')
      repeat-x;
    background-size: 100px auto;
    height: 20px;
    &.bottom {
      background-size: 100px auto;
      transform: scaleY(-1);
      position: absolute;
      bottom: -20px;
      width: 100%;
    }
  }
</style>
