---
import envelopeIcon from './assets/envelope.svg?raw';
import linkedinIcon from './assets/linkedin.svg?raw';

const socialLinks = [
    {
        color: '#0077B5',
        icon: linkedinIcon,
        topMargin: '-3px',
        url: 'https://www.linkedin.com/in/antoniukvalentyna/'
    },
    {
        color: '#aa381e',
        icon: envelopeIcon,
        url: 'mailto:antoniuk.valentyna@gmail.com'
    }
];
---
<ul>
    {
        socialLinks.map(link => (<li style={`--before-color: ${link.color};`}><a target="_blank" rel="nofollow noopener noreferrer external" href={link.url}>
            <i style={`position: relative; display: flex; top: ${link.topMargin || 0}`}>
                <Fragment class="icon" set:html={link.icon}/>
            </i>
        </a></li>))
    }
</ul>

<style lang="scss">
  ul {
    display: flex;
    li {
      list-style: none;
      a {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #262626;
        background-color: #fff;
        text-align: center;
        line-height: 40px;
        font-size: 20px;
        margin: 0 10px;
        border-radius: 50%;
        position: relative;
        overflow: hidden;
        border: 2px solid #000;
        z-index: 1;
        transition: .5s;
        &:hover {
          color: #fff;
          border-color: var(--before-color);
        }
        &:before {
          content: "";
          position: absolute;
          top: 100%;
          left: 0;
          width: 100%;
          height: 100%;
          background: var(--before-color);
          transition: .5s;
          z-index: -1;
        }
        &:hover:before {
          top: 0;
        }
      }
    }
  }
</style>