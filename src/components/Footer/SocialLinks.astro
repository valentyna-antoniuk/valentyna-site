---
import EnvelopeIcon from "./assets/envelope.svg";
import LinkedinIcon from "./assets/linkedin.svg";
import GithubIcon from "./assets/github.svg";

const socialLinks = [
  {
    color: "#aa381e",
    Icon: EnvelopeIcon,
    url: "mailto:antoniuk.valentyna@gmail.com",
  },
  {
    color: "#0077B5",
    Icon: LinkedinIcon,
    topMargin: "-4px",
    url: "https://www.linkedin.com/in/antoniukvalentyna/",
  },
  {
    color: "#000",
    Icon: GithubIcon,
    url: "https://github.com/valentyna-antoniuk",
  },
];
---

<ul>
  {
    socialLinks.map((link) => (
      <li style={`--color: ${link.color};`}>
        <a
          target="_blank"
          rel="nofollow noopener noreferrer external"
          href={link.url}
        >
          <span style={`--topMargin: ${link.topMargin || 0}`}>
            <link.Icon class="icon" />
          </span>
        </a>
      </li>
    ))
  }
</ul>

<style lang="scss">
  ul {
    display: flex;
    li {
      list-style: none;
      a {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #262626;
        background-color: #fff;
        text-align: center;
        line-height: 40px;
        font-size: 20px;
        margin: 0 10px;
        border-radius: 50%;
        position: relative;
        overflow: hidden;
        border: 2px solid #000;
        z-index: 1;
        transition: 0.5s;
        &:hover {
          color: #fff;
          border-color: var(--color);
        }
        &:before {
          content: "";
          position: absolute;
          top: 100%;
          left: 0;
          width: 100%;
          height: 100%;
          background: var(--color);
          transition: 0.5s;
          z-index: -1;
        }
        &:hover:before {
          top: 0;
        }
        .icon {
          position: relative;
          display: flex;
          margin-top: var(--topMargin);
        }
      }
    }
  }
</style>
