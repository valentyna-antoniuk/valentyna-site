---
import CommonLayout from "../layouts/CommonLayout.astro";
---

<CommonLayout isFooterAvailable={false}>
  <div id="clouds">
    <div class="cloud x1"></div>
    <div class="cloud x1_5"></div>
    <div class="cloud x2"></div>
    <div class="cloud x3"></div>
    <div class="cloud x4"></div>
    <div class="cloud x5"></div>
  </div>
  <main class="container">
    <div class="error-code">404</div>
    <hr />
    <div class="message-primary">THE PAGE</div>
    <div class="message-secondary">WAS NOT FOUND</div>
    <a class="btn" href="/">HOME</a>
  </main>
</CommonLayout>

<style lang="scss">
  body {
    background: #8ac8f3;
    color: #fff;
    overflow: hidden;
    margin: 0;
  }

  .container {
    width: 80%;
    max-width: 600px;
    margin: 100px auto 0;
    text-align: center;
    position: relative;
  }

  .error-code {
    font-size: 220px;
    letter-spacing: 15px;
    height: 210px;
    line-height: 250px;
    display: inline-block;
    position: relative;
    z-index: 2;
    user-select: none;
    @media (max-width: 600px) {
      font-size: 120px;
    }
  }

  .message-primary {
    font-size: 4rem;
    letter-spacing: 12px;
    line-height: 1;
    margin: 0.2em 0;
    @media (max-width: 600px) {
      font-size: 24px;
    }
  }

  .message-secondary {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    @media (max-width: 600px) {
      font-size: 20px;
    }
  }

  hr {
    width: 20%;
    min-width: 200px;
    height: 5px;
    margin: 0 auto 10px;
    border: none;
    border-top: 5px solid #fff;
    background: transparent;
    z-index: -10;
  }

  .btn {
    display: inline-block;
    min-width: 250px;
    padding: 0.5rem 0;
    font-size: 25px;
    color: #8ac8f3;
    background-color: #fff;
    text-decoration: none;
    border-radius: 30px;
    font-weight: 600;
    border: 1px solid transparent;
    transition: all 0.3s ease;
    user-select: none;

    &:hover,
    &:focus {
      border: 1px solid #8ac8f3;
      box-shadow: 0 0 15px rgba(255, 255, 255, 0.7);
      outline: none;
    }
  }

  #clouds {
    position: fixed;
    width: 100%;
    height: calc(100vh - 400px);
    top: 100px;
    left: 0;
    overflow: hidden;
    z-index: 0;
    @media (max-width: 600px) {
      height: 100vh;
    }
  }

  .cloud {
    width: 350px;
    height: 120px;
    background: #fff;
    border-radius: 100px;
    position: absolute;
    margin: 120px auto 20px;
    z-index: -1;
    filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.3));
    transition: ease 1s;
  }

  .cloud::before,
  .cloud::after {
    content: "";
    position: absolute;
    background: #fff;
    z-index: -1;
    border-radius: 100%;
  }

  .cloud::after {
    width: 100px;
    height: 100px;
    top: -50px;
    left: 50px;
  }

  .cloud::before {
    width: 180px;
    height: 180px;
    top: -90px;
    right: 50px;
    border-radius: 200px;
  }

  .x1 {
    top: -50px;
    left: 100px;
    transform: scale(0.3);
    opacity: 0.9;
    animation: moveclouds 15s linear infinite;
  }

  .x1_5 {
    top: -80px;
    left: 250px;
    transform: scale(0.3);
    animation: moveclouds 17s linear infinite;
  }

  .x2 {
    left: 250px;
    top: 30px;
    transform: scale(0.6);
    opacity: 0.6;
    animation: moveclouds 25s linear infinite;
  }

  .x3 {
    left: 250px;
    bottom: -70px;
    transform: scale(0.6);
    opacity: 0.8;
    animation: moveclouds 25s linear infinite;
  }

  .x4 {
    left: 470px;
    bottom: 20px;
    transform: scale(0.75);
    opacity: 0.75;
    animation: moveclouds 18s linear infinite;
  }

  .x5 {
    left: 200px;
    top: 300px;
    transform: scale(0.5);
    opacity: 0.8;
    animation: moveclouds 20s linear infinite;
  }

  @keyframes moveclouds {
    0% {
      margin-left: 1000px;
    }
    100% {
      margin-left: -1000px;
    }
  }
</style>
